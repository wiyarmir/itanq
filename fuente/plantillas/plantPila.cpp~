
template <typename TBase>
Pila<TBase>::Pila(){
	top = NULL;
}

template <typename TBase>
Pila<TBase>::~Pila(){
	while(!estaVacia()){
		desapilar();
	}
}

template <typename TBase>
bool Pila<TBase>::estaVacia(){
	return (top==NULL);
}

template <typename TBase>
void Pila<TBase>::apilar(TBase dat){
	TNodo *nuevo = new TNodo;
	nuevo->dato = dat;
	nuevo->sig=top;
	top = nuevo;
}

template <typename TBase>
TBase Pila<TBase>::desapilar(){
	TBase ret = -1;
	TNodo *aux;
	if(!estaVacia()){
		ret = top->dato;
		aux = top->sig;
		delete top;
		top = aux;
	} else {
		cout << "ERROR: Desapilando pila vacÃ­a" << endl;
		exit(1);
	}
	return ret;
}

template <typename TBase>
TBase Pila<TBase>::cabeza(){
	TBase ret;
	if(!estaVacia()){
		ret = top->dato;
	}
	return ret;
}

